{
    "name": "user-service",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "prebuild": "rimraf dist",
        "start": "npm run serve",
        "build": "npm run build-ts && npm run eslint",
        "serve": "node dist/app.js",
        "watch-node": "nodemon dist/app.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "jest --forceExit ---verbose",
        "prettier-watch": "onchange 'src/*' -- prettier --write {{changed}}",
        "watch-test": "npm run test -- --watchAll",
        "build-ts": "npm run prebuild && tsc",
        "watch-ts": "npm run prebuild && tsc -w",
        "eslint": "eslint src/*",
        "eslint-fix": "eslint src/* --fix",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect=9229 dist/app.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "license": "ISC",
    "devDependencies": {
        "@types/amqplib": "^0.8.2",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.12",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.0.3",
        "@types/jsonwebtoken": "^8.5.6",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.11.10",
        "@types/passport": "^1.0.7",
        "@types/passport-facebook-token": "^0.4.35",
        "@types/recaptcha2": "^1.3.1",
        "@types/redis": "^2.8.32",
        "@types/speakeasy": "^2.0.6",
        "@types/ua-parser-js": "^0.7.36",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "concurrently": "^6.4.0",
        "eslint": "^8.3.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-unicorn": "^39.0.0",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "nodemon": "^2.0.15",
        "onchange": "^7.1.0",
        "prettier": "^2.5.0",
        "testcontainers": "^7.23.2",
        "ts-jest": "^27.0.7",
        "typescript": "^4.5.2"
    },
    "dependencies": {
        "@sentry/node": "^6.15.0",
        "amqplib": "^0.8.0",
        "argon2": "^0.28.3",
        "blake3": "^2.1.7",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "crypto-random-string": "^3.3.1",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-async-handler": "^1.2.0",
        "express-validator": "^6.13.0",
        "helmet": "^4.6.0",
        "http-status-codes": "^2.1.4",
        "jsonwebtoken": "^8.5.1",
        "moment": "^2.29.1",
        "morgan": "^1.10.0",
        "passport": "^0.5.0",
        "passport-facebook-token": "^4.0.0",
        "passport-google-id-token": "^0.4.7",
        "password-validator": "^5.2.1",
        "pg": "^8.7.1",
        "recaptcha2": "^1.3.3",
        "redis": "^3.1.2",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "speakeasy": "^2.0.0",
        "tsyringe": "^4.6.0",
        "typeorm": "^0.2.41",
        "ua-parser-js": "^1.0.2",
        "winston": "^3.3.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run eslint-fix"
        }
    },
    "importSort": {
        ".js, .jsx, .es6, .es, .mjs, .ts, .tsx": {
            "style": "module",
            "parser": "babylon"
        }
    }
}
