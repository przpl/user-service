{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2021",
        "lib": ["ES2021"],
        "strict": true,
        "useUnknownInCatchVariables": false,
        "strictNullChecks": false,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
